@model property_rental_management.Models.Msg

@{
    
}

<h1>Contact Property</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ManagerId" class="form-control" value="@ViewData["managerID"]" />
            <input type="hidden" asp-for="TenantId" class="form-control" value="@ViewData["tenantID"]" />

            <div class="form-group">
                <label class="control-label">Name: </label>
                <input class="form-control" value="@ViewData["tenantName"]" disabled />
            </div>

            <div class="form-group">
                <label class="control-label">Email: </label>
                <input class="form-control" value="@ViewData["tenantEmail"]" disabled />
            </div>

            <div class="form-group">
                <label class="control-label">Email: </label>
                <input class="form-control" value="@ViewData["tenantPhone"]" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Message1" class="control-label">Message</label>
                <textarea asp-for="Message1" id="message" class="form-control" rows="5" placeholder="Hi! I am interested to see this place."></textarea>
                <span asp-validation-for="Message1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
