@model property_rental_management.Models.Property

@{
}

<h1>Manage Property</h1>
<h3>Are you sure you want to delete this?</h3>
<div class="rs-form-edit">
    <dl class="row">
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Model.Address , @Model.City.CityName , QC
        </dd>
        <dt class = "col-sm-2">
            Year Established
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearEstablished)
        </dd>
        <dt class = "col-sm-2">
            Apartment Units
        </dt>
        <dd class = "col-sm-10">
            @Model.TotalUnits
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PropertyId" />
        <input type="submit" value="Delete Property" class="btn btn-lg btn-danger rs-btn" />
    </form>
</div>
