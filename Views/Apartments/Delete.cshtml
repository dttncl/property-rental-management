@model property_rental_management.Models.Apartment

@{
}

<h1>Manage Apartment</h1>
<h3>Are you sure you want to delete this?</h3>
<div class="rs-form-edit">
    <dl class="row">
        <dt class="col-sm-2">
            Bedrooms
        </dt>
        <dd class="col-sm-10">
            @Model.Bedrooms
        </dd>
        <dt class="col-sm-2">
            Bathrooms
        </dt>
        <dd class="col-sm-10">
            @Model.Bathrooms
        </dd>
        <dt class="col-sm-2">
            Floor Area
        </dt>
        <dd class="col-sm-10">
            @Model.FloorArea sqm.
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            $ @Model.Price
        </dd>
        <dt class="col-sm-2">
            Apartment Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status.Description
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ApartmentId" />
        <input type="submit" value="Delete Apartment" class="btn btn-lg btn-danger rs-btn" />
    </form>
</div>
