@model property_rental_management.Models.ManagerModel

@{

}

<h1>Delete Manager</h1>
<h3>Are you sure you want to delete this?</h3>
<div class="rs-form-edit">
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            Manager Name
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName @Model.LastName
        </dd>
        <dt class = "col-sm-2">
            Phone
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Salary
        </dd>
        <dt class="col-sm-2">
            Supervisor
        </dt>
        <dd class="col-sm-10">
            @ViewBag.SupervisorName
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CityName, Quebec
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Deactivate Employee" class="btn btn-lg btn-danger rs-btn" />
    </form>
</div>
