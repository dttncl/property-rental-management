@model property_rental_management.Models.ManagerModel

@{

}

<h1>Edit Manager Details</h1>
<div class="row">
    <div class="col-md-5 rs-form-edit">
        <form asp-action="Edit" onsubmit="return validateForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" class="form-control" value="@Model.EmployeeId"/>
            <input type="hidden" asp-for="Password" class="form-control" value="@Model.Password"/>
            <input type="hidden" asp-for="Email" class="form-control" value="@Model.Email"/>
            <input type="hidden" asp-for="StatusId" class="form-control" value="@Model.StatusId" />

            <div class="form-row">
                <div class="form-group">
                    <label class="control-label">Manager Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input type="number" asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Salary" class="control-label">Annual Salary</label>
                <input type="number" step=".01" min="0" asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupervisorId" class="control-label">Supervisor</label>
                <select class="form-select" asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
            </div>

            <div class="form-group">
                <label asp-for="CityId" class="control-label">City Assignment</label>
                <select class="form-select" asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-lg btn-rentaspace-full" />
            </div>

        </form>
    </div>
</div>

<script>
    function validateForm() {
        var firstName = document.getElementById("FirstName").value;
        var lastName = document.getElementById("LastName").value;
        var phone = document.getElementById("Phone").value;
        var salary = document.getElementById("Salary").value;

        if (firstName.trim() === "" || lastName.trim() === "" || phone.trim() === "" || salary.trim() === "") {
            alert("Please fill in all required fields.");
            return false;
        }

        return true;
    }
</script>