@model property_rental_management.Models.BookAppointment

@{
    var tenantID = ViewData["tenantID"];
    var tenantIDList = ViewBag.tenantIDList;
}

<h1>Book An Appointment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ManagerId" value="@ViewData["managerID"]" />
            <input type="hidden" asp-for="StatusId" value="@ViewData["statusId"]" />

            @if (tenantIDList == null)
            {
                <input type="hidden" asp-for="TenantId" value="@ViewData["tenantID"]" />
            } else
            {
                <div class="form-group">
                    <label class="control-label">To: </label>
                    <select asp-com asp-for="TenantId" class="form-control" asp-items="@tenantIDList"></select>
                </div>
            }

            <div class="form-group">
                <label asp-for="ApartmentId" class="control-label"></label>
                <select asp-for="ApartmentId" class="form-control" asp-items="ViewBag.ApartmentId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ScheduleId" class="control-label"></label>
                <select asp-for="ScheduleId" class="form-control" asp-items="ViewBag.ScheduleId"></select>
            </div>

            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" class="form-control" id="appointment-date" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>