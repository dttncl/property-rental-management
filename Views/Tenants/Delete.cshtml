@model property_rental_management.Models.Tenant

@{
}

<h1>Delete Tenant</h1>
<h3>Are you sure you want to delete this?</h3>
<div class="rs-form-edit">
    <dl class="row">
        <dt class="col-sm-2">
            Tenant Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.EmailNavigation.Email
        </dd>
        <dt class = "col-sm-2">
            Phone
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TenantId" />
        <input type="submit" value="Delete Tenant" class="btn btn-lg btn-danger rs-btn" />
    </form>
</div>
